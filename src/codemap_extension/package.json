{
    "name": "codemap-extension",
    "displayName": "CODE MAP",
    "description": "Analysis online",
    "icon": "images/logo.png",
    "version": "0.0.1",
    "publisher": "Raymond",
    "author": {
        "name": "Raymond Guan",
        "email": "spcidealacm@gmail.com",
        "url": "https://github.com/SVF-tools/WebSVF/tree/master/src/codemap_extension"
    },
    "engines": {
        "vscode": "^1.43.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./build/vscode-part/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "extension.graphVisualization",
                "title": "Web View"
            },
            {
                "command": "extension.textControl",
                "title": "Text Control"
            },
            {
                "command": "extension.ForceNodeNext",
                "title": "ForceNodeNext"
            },
            {
                "command": "extension.ForceNodeBefore",
                "title": "ForceNodeBefore"
            },
            {
                "command": "extension.SelectRangeUp",
                "title": "SelectRange"
            },
            {
                "command": "extension.SelectRangeDown",
                "title": "SelectRange"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "3D CODE GRAPH",
            "properties": {
                "codeMap.ShowOrHide": {
                    "type": "string",
                    "default": "hide",
                    "description": "Enable or disable the highlight"
                },
                "codeMap.GraphMode": {
                    "type": "string",
                    "default": "NotSelect",
                    "description": "Select graph mode"
                }
            }
        },
        "keybindings": [
            {
                "command": "extension.textControl",
                "key": "ctrl+alt+l",
                "mac": "cmd+alt+l",
                "when": "editorTextFocus"
            },
            {
                "command": "extension.ForceNodeNext",
                "key": "ctrl+alt+j",
                "mac": "cmd+alt+Right"
            },
            {
                "command": "extension.ForceNodeBefore",
                "key": "ctrl+alt+k",
                "mac": "cmd+alt+Left"
            },
            {
                "command": "extension.SelectRangeUp",
                "key": "ctrl+alt+i",
                "mac": "cmd+alt+Up",
                "when": "editorTextFocus"
            },
            {
                "command": "extension.SelectRangeDown",
                "key": "ctrl+alt+m",
                "mac": "cmd+alt+Down",
                "when": "editorTextFocus"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "yarn run compile",
        "compile": "tsc -p ./",
        "lint": "eslint src --ext ts",
        "watch": "tsc -watch -p ./",
        "pretest": "yarn run compile && yarn run lint",
        "test": "node ./build/test/runTest.js",
        "upgrade_react": "cd react-part && yarn upgrade && cd ..",
        "upgrade_all": "yarn upgrade && yarn upgrade_react",
        "react_build": "cd react-part && yarn run build && cd ..",
        "clear": "rm -rf ./build",
        "react_clear": "cd react-part && yarn clear && cd ..",
        "build_all": "yarn compile && yarn react_build",
        "clear_all": "yarn clear && yarn react_clear",
        "create_vscode": "yarn clear && yarn compile",
        "create_react": "cd react-part && yarn go && cd ..",
        "create_all": "yarn create_vscode && yarn create_react",
        "cp_react": "cp -rf react-part/build ./build/react-part",
        "cl": "yarn clear_all",
        "go_react": "yarn create_all && yarn cp_react",
        "mv_web": "cp -rf ./web-part ./build/",
        "go": "yarn create_vscode"
    },
    "devDependencies": {
        "@types/glob": "^7.1.1",
        "@types/mocha": "^7.0.1",
        "@types/node": "^12.11.7",
        "@types/vscode": "^1.43.0",
        "@typescript-eslint/eslint-plugin": "^2.18.0",
        "@typescript-eslint/parser": "^2.18.0",
        "eslint": "^6.8.0",
        "glob": "^7.1.6",
        "mocha": "^7.0.1",
        "typescript": "^3.7.5",
        "vscode-test": "^1.3.0"
    }
}
